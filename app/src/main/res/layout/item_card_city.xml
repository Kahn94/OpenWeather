<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="2dp"
    card_view:cardCornerRadius="24dp">

    <RelativeLayout
        android:id="@+id/item_main_layout_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <LinearLayout
            android:id="@+id/ll_item_weather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true">

            <ImageView
                android:id="@+id/image_item_weather"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="8dp"
                tools:background="@mipmap/ic_launcher_round" />

            <TextView
                android:id="@+id/tv_item_gradus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textSize="36sp"
                tools:text="23\u2103" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_item_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_item_weather"
            android:layout_centerHorizontal="true"
            android:textSize="22sp"
            tools:text="Саратов" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>